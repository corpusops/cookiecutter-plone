rotate $PLONE__ROTATE
weekly
create
compress
delaycompress
/logs/instance*.log {
    user $PLONE__USER $PLONE__USER
    compress
    rotate $PLONE__ROTATE
    daily
    notifempty
    size 10M
    sharedscripts
    missingok
    postrotate
        /bin/kill -USR2 $(cat /code/var/instance.pid)
    endscript
}
